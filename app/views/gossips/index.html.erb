<!-- test si ya pas d'erreur affiche ce message -->
<% if flash[:success] %>
  <div class="success">
    <div class="alert alert-success %> alert-dismissible fade show" role="alert">
      <%= flash[:success] %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>

<h1>Welcome <%= @first_name %></h1>

<%= link_to "Creer un gossip", new_gossip_path, class:'btn btn-primary'%><br/><br/>

<% Gossip.all.each do |gossip| %> <%# gossips est un tableau d'objet ! %>
  <%= gossip.title %><br/>
  <%= gossip.user.first_name %><br/>
  <%= link_to "potin", gossip_path(gossip.id)%><br/>   <%# on utilise l'id de l'objet gossip pour diriger vers la nouvelle page, cependant cela n'est pas suffisant, on fera que gossip.1, on doit utiliser as: 'gossip' on definit la lien /gossip/:id comme gossip, quon réutilise dans gossip_path.%>   
  <%# on pourrait aussi utiliser link_to "potin", "/gossip/#{gossip.id}", l'importance est d'utiliser l'id de gossip pour rédiriger à la bonne page%>
  <%= link_to "profil", "/profil/#{gossip.id}"%><br/><br/>

<% end %> 